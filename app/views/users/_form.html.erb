<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Errors creating user:</p>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user do |form| %>
  <div class="form-group">
    <label for="email">Email</label>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
  </div>
  <div class="form-group">
    <label for="password_confirmation">Password confirmation</label>
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Retype password', required: true %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>