<%= form_for :user, url: sessions_path, method: :post do |form| %>
  <div class="form-group">
    <%= form.label :email, 'User email' %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
  </div>
  <div class="form-group">
    <%= form.label :password, 'User password' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
  </div>
  <%= form.submit 'Login', class: 'btn btn-primary' %>
<% end %>