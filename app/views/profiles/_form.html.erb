<% if @profile.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Errors creating profile:</p>
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= form_for @profile, url: profile_path, method: (params[:action] == 'edit' ? :put : :post) do |form| %>
    <div class="form-group">
      <%= form.label :first_name, 'First name' %>
      <%= form.text_field :first_name, class: 'form-control', placeholder: 'First name', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :last_name, 'Last name' %>
      <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name', required: true %>
    </div>
    <div class="radio">
      <%= form.label :gender_male, class: 'radio-inline' do %>
        <%= form.radio_button :gender, 'male' %>
        Male
      <% end %>
      <%= form.label :gender_fmale, class: 'radio-inline' do %>
        <%= form.radio_button :gender, 'female' %>
        Female
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :birth_date, 'Date of birth' %>
      <%= form.date_field :birth_date, class: 'form-control', placeholder: 'yyyy-mm-dd', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :avatar, 'User avatar' %>
      <%= form.file_field :avatar %>
      <%= form.hidden_field :avatar_cache %>
      <% if @profile.avatar? %>
          <p class="help-block">Currently uploaded image:</p>
          <%= image_tag @profile.avatar.thumb.url %>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :street, 'Street' %>
      <%= form.text_field :street, class: 'form-control', placeholder: 'Street', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :city, 'City' %>
      <%= form.text_field :city, class: 'form-control', placeholder: 'City', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :country, 'Country' %>
      <%= form.text_field :country, class: 'form-control', placeholder: 'Country', required: true %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
<% end %>